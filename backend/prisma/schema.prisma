generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     Int[]
  scheme   Int[]
  region   Int[]
  trips    Trips[]
}

model Trips {
  id            Int     @id @default(autoincrement())
  t_id          Int     @default(autoincrement())
  src           String
  dest          String
  departureTime String
  arrivalTime   String
  scheme        String
  region        String
  distance      Float
  fare          Int
  adminApproval Boolean @default(false)
  supApproval   Boolean @default(false)
  dirApproval   Boolean @default(false)
  employeeId    Int
  user          User    @relation(fields: [employeeId], references: [id], onDelete: Cascade)
}
